<%= form_tag(students_path, method: :get) do %>
<label for="student_query">Student Name:</label><br>
<%= text_field_tag(:query, params[:query]) %><br>
<%= submit_tag ("Search") %>
<% end %>

<% if @students %>
    <% @students.each do |student| %>
    <%= render partial: "students/student", locals: {student: student} %>
    <% end %>
<% end %>